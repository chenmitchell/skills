{
  "templates": {
    "statusReportEmail": {
      "subject": "[{{PROJECT}}] Weekly Status - {{WEEK_START}}",
      "sections": ["highlights", "accomplishments", "upcoming", "risks", "needs-attention"]
    },
    "riskAlert": {
      "subject": "[{{PROJECT}}] ⚠️ Risk Alert - {{RISK_ID}}",
      "priority": "high",
      "requires-response": true
    },
    "milestoneComplete": {
      "subject": "[{{PROJECT}}] ✅ Milestone Reached - {{MILESTONE_NAME}}",
      "recipients": ["team", "stakeholders", "sponsor"]
    }
  },
  "channels": {
    "slack": {
      "daily-standup": "#daily-sync",
      "general": "#project-updates",
      "urgent": "#urgent-alerts"
    },
    "email": {
      "team": "team@company.com",
      "stakeholders": "stakeholders@company.com",
      "sponsor": "sponsor@company.com"
    }
  }
}
