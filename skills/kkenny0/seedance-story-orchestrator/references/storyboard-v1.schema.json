{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/seedance-storyboard-v1.schema.json",
  "title": "Seedance Storyboard v1",
  "type": "object",
  "required": ["version", "shots"],
  "properties": {
    "version": { "const": "storyboard.v1" },
    "project_id": { "type": "string" },
    "global": {
      "type": "object",
      "properties": {
        "model": { "type": "string" },
        "ratio": { "type": "string", "enum": ["16:9", "4:3", "1:1", "3:4", "9:16", "21:9", "adaptive"] },
        "duration": { "type": "integer", "minimum": -1, "maximum": 12 },
        "resolution": { "type": "string", "enum": ["480p", "720p", "1080p"] },
        "generate_audio": { "type": "boolean" },
        "draft": { "type": "boolean" },
        "return_last_frame": { "type": "boolean" },
        "service_tier": { "type": "string", "enum": ["default", "flex"] },
        "seed": { "type": "integer" }
      },
      "additionalProperties": true
    },
    "continuity": {
      "type": "object",
      "properties": {
        "chain_last_frame": { "type": "boolean" }
      },
      "additionalProperties": true
    },
    "shots": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id"],
        "properties": {
          "id": { "type": "string" },
          "prompt": { "type": "string" },
          "image": { "type": "string" },
          "first_frame": { "type": "string" },
          "last_frame": { "type": "string" },
          "ref_images": { "type": "array", "items": { "type": "string" }, "maxItems": 4 },
          "model": { "type": "string" },
          "ratio": { "type": "string" },
          "duration": { "type": "integer" },
          "resolution": { "type": "string" },
          "generate_audio": { "type": "boolean" },
          "draft": { "type": "boolean" },
          "return_last_frame": { "type": "boolean" },
          "service_tier": { "type": "string" },
          "seed": { "type": "integer" },
          "camera_fixed": { "type": "boolean" },
          "watermark": { "type": "boolean" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
